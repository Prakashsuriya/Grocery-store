---
export interface Props {
  class?: string;
  size?: "sm" | "md" | "lg" | "xl";
  variant?: "full" | "icon";
}

const { class: className, size = "md", variant = "full" } = Astro.props;

const sizeClasses = {
  sm: variant === "full" ? "text-lg" : "w-6 h-6",
  md: variant === "full" ? "text-2xl" : "w-8 h-8",
  lg: variant === "full" ? "text-4xl" : "w-12 h-12",
  xl: variant === "full" ? "text-6xl" : "w-16 h-16",
};

const iconSizes = {
  sm: "w-6 h-6 text-xs",
  md: "w-8 h-8 text-sm",
  lg: "w-12 h-12 text-lg",
  xl: "w-16 h-16 text-2xl",
};

const iconClass = `rounded-full object-cover shadow-lg ${iconSizes[size]} ${className || ''}`;
const containerClass = `flex items-center justify-center ${className || ''}`;
const imageHeight = size === "sm" ? "h-16" : size === "md" ? "h-24" : size === "lg" ? "h-32" : "h-48";
const fullImageClass = `object-contain shadow-lg ${imageHeight}`;
---

{variant === "icon" ? (
  <img
    src="https://cdn.builder.io/api/v1/image/assets%2F8f78a356a05540998176ea24bafbe59e%2Fc93154d951494f618adbb017db30f7ce?format=webp&width=800"
    alt="Banyan Grocers Logo"
    class={iconClass}
  />
) : (
  <div class={containerClass}>
    <img
      src="https://cdn.builder.io/api/v1/image/assets%2F8f78a356a05540998176ea24bafbe59e%2F1663f0e58d6a461a8d196d170a0497c3?format=webp&width=800"
      alt="Banyan Grocers - An Urban Tradition"
      class={fullImageClass}
    />
  </div>
)}

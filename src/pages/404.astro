---
import Layout from '../layouts/Layout.astro';
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';
---

<Layout title="Page Not Found - Banyan Grocers">
  <Navigation />
  
  <div class="min-h-screen flex items-center justify-center bg-gradient-to-br from-fresh-50/30 via-background to-warm-50/30 pt-24">
    <div class="text-center max-w-md mx-auto px-4">
      <div class="text-8xl mb-8">����️</div>
      <h1 class="text-4xl font-bold text-fresh-700 mb-4">
        Oops! Page Not Found
      </h1>
      <p class="text-lg text-muted-foreground mb-8">
        The page you're looking for seems to have wandered off like a shopping cart in the parking lot.
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a href="/">
          <button class="py-3 px-6 bg-gradient-to-r from-fresh-500 to-fresh-600 hover:from-fresh-600 hover:to-fresh-700 text-white rounded-xl shadow-lg transition-all duration-300">
            Return Home
          </button>
        </a>
        <a href="/shopping">
          <button class="py-3 px-6 bg-white/70 backdrop-blur-sm border border-fresh-200 text-fresh-700 hover:bg-fresh-50 rounded-xl transition-colors">
            Start Shopping
          </button>
        </a>
      </div>
    </div>
  </div>

  <Footer />
</Layout>

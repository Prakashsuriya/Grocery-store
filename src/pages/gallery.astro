---
import Layout from '../layouts/Layout.astro';
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';

const placeholderImages = [
  {
    id: 1,
    category: "Fresh Produce",
    emoji: "ü•¨",
    title: "Fresh Vegetables",
  },
  { id: 2, category: "Fruits", emoji: "üçé", title: "Local Fruits" },
  { id: 3, category: "Store", emoji: "üè™", title: "Our Store Front" },
  { id: 4, category: "Bakery", emoji: "üçû", title: "Fresh Baked Goods" },
  { id: 5, category: "Dairy", emoji: "ü•õ", title: "Dairy Products" },
  { id: 6, category: "Meats", emoji: "ü•©", title: "Quality Meats" },
];
---

<Layout title="Photo Gallery - Banyan Grocers">
  <Navigation />
  
  <div class="min-h-screen bg-gradient-to-br from-fresh-50/30 via-background to-warm-50/30 pt-24">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <!-- Back Button -->
      <a href="/">
        <button class="mb-6 py-2 px-4 bg-white/70 backdrop-blur-sm border border-gray-200 rounded-lg hover:bg-gray-50 transition-colors flex items-center gap-2">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
          </svg>
          Back to Home
        </button>
      </a>

      <!-- Header -->
      <div class="text-center mb-12">
        <h1 class="text-4xl font-bold bg-gradient-to-r from-fresh-600 to-fresh-700 bg-clip-text text-transparent mb-4">
          Photo Gallery
        </h1>
        <p class="text-lg text-muted-foreground max-w-2xl mx-auto">
          Take a visual tour of our fresh products and welcoming store environment.
        </p>
      </div>

      <!-- Gallery Grid -->
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {placeholderImages.map((image) => (
          <div class="bg-white/70 backdrop-blur-sm border-0 shadow-lg hover:shadow-xl transition-all duration-300 group hover:scale-105 overflow-hidden rounded-2xl">
            <div class="aspect-video bg-gradient-to-br from-fresh-100 to-warm-100 flex items-center justify-center text-8xl group-hover:scale-110 transition-transform duration-300">
              {image.emoji}
            </div>
            <div class="p-6">
              <div class="flex items-center justify-between mb-2">
                <span class="text-sm font-medium text-fresh-600 bg-fresh-100 px-2 py-1 rounded-full">
                  {image.category}
                </span>
                <div class="flex items-center gap-1">
                  {[...Array(5)].map(() => (
                    <svg class="w-4 h-4 text-yellow-400 fill-current" viewBox="0 0 24 24">
                      <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"></path>
                    </svg>
                  ))}
                </div>
              </div>
              <h3 class="text-lg font-semibold mb-2">{image.title}</h3>
              <p class="text-sm text-muted-foreground">
                High-quality {image.category.toLowerCase()} sourced with care for our customers.
              </p>
            </div>
          </div>
        ))}
      </div>

      <!-- Coming Soon Section -->
      <div class="mt-16 text-center bg-white/50 backdrop-blur-sm rounded-2xl p-12 border border-fresh-100">
        <svg class="w-16 h-16 text-fresh-400 mx-auto mb-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 9a2 2 0 012-2h.93a2 2 0 001.664-.89l.812-1.22A2 2 0 0110.07 4h3.86a2 2 0 011.664.89l.812 1.22A2 2 0 0018.07 7H19a2 2 0 012 2v9a2 2 0 01-2 2H5a2 2 0 01-2-2V9z"></path>
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 13a3 3 0 11-6 0 3 3 0 016 0z"></path>
        </svg>
        <h2 class="text-2xl font-bold text-fresh-700 mb-4">
          More Photos Coming Soon!
        </h2>
        <p class="text-muted-foreground max-w-md mx-auto">
          We're currently updating our gallery with fresh photos of our products and store. Check back soon for more visual content!
        </p>
      </div>
    </div>
  </div>

  <Footer />
</Layout>

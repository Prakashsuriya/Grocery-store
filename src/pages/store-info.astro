---
import Layout from '../layouts/Layout.astro';
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';

const services = [
  {
    title: "Payment Options",
    description: "Cash, Credit Cards, Debit Cards, EBT/SNAP accepted",
  },
  {
    title: "Local Delivery",
    description: "Delivery available within Binghamton area (coming soon)",
  },
  {
    title: "Quality Guarantee",
    description: "100% satisfaction guarantee on all products",
  },
  {
    title: "Organic Selection",
    description: "Wide variety of certified organic products",
  },
];

const categories = [
  { name: "Fresh Produce", description: "Daily fresh vegetables and fruits" },
  { name: "Organic Groceries", description: "Certified organic products" },
  { name: "Local Produce", description: "Locally sourced from regional farms" },
  { name: "Pantry Staples", description: "Essential everyday items" },
  { name: "Dairy", description: "Fresh milk, cheese, and dairy products" },
  { name: "Bakery", description: "Fresh baked goods and artisan breads" },
  { name: "Meats", description: "Quality meats and poultry" },
  { name: "International Foods", description: "Global cuisine ingredients" },
];
---

<Layout title="Store Information - Banyan Grocers">
  <Navigation />
  
  <div class="min-h-screen bg-gradient-to-br from-fresh-50/30 via-background to-warm-50/30 pt-24">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <!-- Back Button -->
      <a href="/">
        <button class="mb-6 py-2 px-4 bg-white/70 backdrop-blur-sm border border-gray-200 rounded-lg hover:bg-gray-50 transition-colors flex items-center gap-2">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
          </svg>
          Back to Home
        </button>
      </a>

      <!-- Header -->
      <div class="text-center mb-12">
        <h1 class="text-4xl font-bold bg-gradient-to-r from-fresh-600 to-fresh-700 bg-clip-text text-transparent mb-4">
          Store Information
        </h1>
        <p class="text-lg text-muted-foreground max-w-2xl mx-auto">
          Everything you need to know about shopping at Banyan Grocers.
        </p>
      </div>

      <!-- Store Details -->
      <div class="grid lg:grid-cols-2 gap-8 mb-12">
        <div class="bg-white/70 backdrop-blur-sm border-0 shadow-lg rounded-2xl p-8">
          <div class="flex items-center mb-6">
            <svg class="w-6 h-6 mr-2 text-fresh-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
            </svg>
            <h2 class="text-2xl font-bold text-fresh-700">Location & Hours</h2>
          </div>
          <div class="space-y-6">
            <div>
              <h3 class="font-semibold mb-2">Address</h3>
              <p class="text-muted-foreground">
                223 Main Street, Rear building<br />
                Orton Ave, Binghamton, NY 13905
              </p>
            </div>

            <div>
              <h3 class="font-semibold mb-2">Store Hours</h3>
              <div class="space-y-2">
                <div class="flex justify-between">
                  <span>Wednesday - Tuesday</span>
                  <span class="text-fresh-600 font-medium">10:30 AM - 9:00 PM</span>
                </div>
                <p class="text-sm text-muted-foreground italic">* Hours may vary on holidays</p>
              </div>
            </div>

            <div>
              <h3 class="font-semibold mb-2">Contact</h3>
              <div class="flex items-center gap-2">
                <svg class="w-4 h-4 text-fresh-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M22 16.92v3a2 2 0 01-2.18 2 19.79 19.79 0 01-8.63-3.07 19.5 19.5 0 01-6-6 19.79 19.79 0 01-3.07-8.67A2 2 0 014.11 2h3a2 2 0 012 1.72 12.84 12.84 0 00.7 2.81 2 2 0 01-.45 2.11L8.09 9.91a16 16 0 006 6l1.27-1.27a2 2 0 012.11-.45 12.84 12.84 0 002.81.7A2 2 0 0122 16.92z"></path>
                </svg>
                <span>+1 607-238-7307</span>
              </div>
            </div>
          </div>
        </div>

        <div class="bg-white/70 backdrop-blur-sm border-0 shadow-lg rounded-2xl p-8">
          <div class="flex items-center mb-6">
            <svg class="w-6 h-6 mr-2 text-fresh-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"></path>
            </svg>
            <h2 class="text-2xl font-bold text-fresh-700">Services & Policies</h2>
          </div>
          <div class="grid grid-cols-1 gap-4">
            {services.map((service) => (
              <div class="flex items-start space-x-3 p-3 bg-fresh-50/50 rounded-lg">
                <div class="p-2 bg-fresh-100 rounded-lg">
                  <svg class="w-5 h-5 text-fresh-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                  </svg>
                </div>
                <div>
                  <h4 class="font-medium">{service.title}</h4>
                  <p class="text-sm text-muted-foreground">{service.description}</p>
                </div>
              </div>
            ))}
          </div>
        </div>
      </div>

      <!-- Product Categories -->
      <div class="mb-12">
        <h2 class="text-3xl font-bold bg-gradient-to-r from-fresh-600 to-warm-600 bg-clip-text text-transparent mb-8 text-center">
          Product Categories
        </h2>
        <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-4">
          {categories.map((category) => (
            <div class="bg-white/70 backdrop-blur-sm border-0 shadow-lg hover:shadow-xl transition-all duration-300 group hover:scale-105 rounded-2xl p-6 text-center">
              <h3 class="font-semibold text-fresh-700 mb-2 group-hover:text-fresh-800 transition-colors">
                {category.name}
              </h3>
              <p class="text-sm text-muted-foreground">{category.description}</p>
            </div>
          ))}
        </div>
      </div>

      <!-- Special Features -->
      <div class="grid md:grid-cols-2 gap-8 mb-12">
        <div class="bg-gradient-to-br from-fresh-100 to-fresh-200 border-0 shadow-lg rounded-2xl p-8">
          <div class="flex items-center mb-4">
            <svg class="w-5 h-5 mr-2 text-fresh-800" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 3l3.57 15.29c.15.64.69 1.07 1.34 1.07h8.18c.65 0 1.19-.43 1.34-1.07L23 3H5zm0 0l-.71-2H1"></path>
            </svg>
            <h3 class="text-xl font-bold text-fresh-800">Organic & Local Focus</h3>
          </div>
          <p class="text-fresh-700 mb-4">
            We prioritize organic and locally sourced products to support both your health and our local farming community.
          </p>
          <div class="flex flex-wrap gap-2">
            <span class="px-2 py-1 bg-fresh-200 text-fresh-800 rounded-full text-sm font-medium">USDA Organic Certified</span>
            <span class="px-2 py-1 bg-fresh-200 text-fresh-800 rounded-full text-sm font-medium">Local Partnerships</span>
            <span class="px-2 py-1 bg-fresh-200 text-fresh-800 rounded-full text-sm font-medium">Farm Fresh Daily</span>
          </div>
        </div>

        <div class="bg-gradient-to-br from-warm-100 to-warm-200 border-0 shadow-lg rounded-2xl p-8">
          <div class="flex items-center mb-4">
            <svg class="w-5 h-5 mr-2 text-warm-800" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"></path>
            </svg>
            <h3 class="text-xl font-bold text-warm-800">Quality Promise</h3>
          </div>
          <p class="text-warm-700 mb-4">
            Every product in our store meets our high standards for quality and freshness. Your satisfaction is our guarantee.
          </p>
          <div class="flex flex-wrap gap-2">
            <span class="px-2 py-1 bg-warm-200 text-warm-800 rounded-full text-sm font-medium">100% Satisfaction</span>
            <span class="px-2 py-1 bg-warm-200 text-warm-800 rounded-full text-sm font-medium">Fresh Guarantee</span>
            <span class="px-2 py-1 bg-warm-200 text-warm-800 rounded-full text-sm font-medium">Quality Tested</span>
          </div>
        </div>
      </div>

      <!-- Call to Action -->
      <div class="text-center bg-white/50 backdrop-blur-sm rounded-2xl p-12 border border-fresh-100">
        <h2 class="text-2xl font-bold text-fresh-700 mb-4">Ready to Shop?</h2>
        <p class="text-muted-foreground max-w-md mx-auto mb-6">
          Experience the Banyan Grocers difference. Fresh products, friendly service, and unbeatable quality await you.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a href="/shopping">
            <button class="py-3 px-6 bg-gradient-to-r from-fresh-500 to-fresh-600 hover:from-fresh-600 hover:to-fresh-700 text-white rounded-xl shadow-lg transition-all duration-300">
              Start Shopping Online
            </button>
          </a>
          <button
            onclick="window.location.href='tel:+16072387307'"
            class="py-3 px-6 bg-white/70 backdrop-blur-sm border border-fresh-200 text-fresh-700 hover:bg-fresh-50 rounded-xl transition-colors flex items-center gap-2 mx-auto"
          >
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M22 16.92v3a2 2 0 01-2.18 2 19.79 19.79 0 01-8.63-3.07 19.5 19.5 0 01-6-6 19.79 19.79 0 01-3.07-8.67A2 2 0 014.11 2h3a2 2 0 012 1.72 12.84 12.84 0 00.7 2.81 2 2 0 01-.45 2.11L8.09 9.91a16 16 0 006 6l1.27-1.27a2 2 0 012.11-.45 12.84 12.84 0 002.81.7A2 2 0 0122 16.92z"></path>
            </svg>
            Call Store
          </button>
        </div>
      </div>
    </div>
  </div>

  <Footer />
</Layout>

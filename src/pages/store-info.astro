---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Store Information - Banyan Grocers">
  <main>
    <div class="min-h-screen bg-gradient-to-br from-fresh-50/30 via-background to-warm-50/30 pt-24 sm:pt-28 lg:pt-32">
      <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
        <!-- Back Button -->
        <a href="/" class="inline-flex items-center mb-4 sm:mb-6 bg-white/70 backdrop-blur-sm border border-input hover:bg-accent hover:text-accent-foreground px-4 py-2 rounded-md text-sm sm:text-base transition-colors">
          ← Back to Home
        </a>

        <!-- Header -->
        <div class="text-center mb-8 sm:mb-12">
          <h1 class="text-2xl sm:text-3xl lg:text-4xl font-bold bg-gradient-to-r from-fresh-600 to-fresh-700 bg-clip-text text-transparent mb-4">
            Store Information
          </h1>
          <p class="text-base sm:text-lg text-muted-foreground max-w-2xl mx-auto">
            Everything you need to know about visiting Banyan Grocers.
          </p>
        </div>

        <!-- Store Info Cards -->
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-8">
          <!-- Hours Card -->
          <div class="bg-white/70 backdrop-blur-sm border-0 shadow-lg rounded-lg p-6">
            <div class="flex items-center mb-4">
              <div class="bg-fresh-100 p-3 rounded-full mr-4">
                <span class="text-2xl">🕒</span>
              </div>
              <h2 class="text-xl font-semibold">Store Hours</h2>
            </div>
            <div class="space-y-3">
              <div class="flex justify-between items-center py-2 border-b border-gray-100">
                <span class="font-medium">Monday - Saturday</span>
                <span class="text-fresh-600 font-semibold">9:00 AM - 9:00 PM</span>
              </div>
              <div class="flex justify-between items-center py-2">
                <span class="font-medium">Sunday</span>
                <span class="text-fresh-600 font-semibold">10:00 AM - 8:00 PM</span>
              </div>
            </div>
          </div>

          <!-- Contact Card -->
          <div class="bg-white/70 backdrop-blur-sm border-0 shadow-lg rounded-lg p-6">
            <div class="flex items-center mb-4">
              <div class="bg-fresh-100 p-3 rounded-full mr-4">
                <span class="text-2xl">📞</span>
              </div>
              <h2 class="text-xl font-semibold">Contact Us</h2>
            </div>
            <div class="space-y-3">
              <div class="flex items-center">
                <span class="text-sm text-muted-foreground mr-2">Phone:</span>
                <a href="tel:+16072387307" class="text-fresh-600 hover:text-fresh-700 font-medium transition-colors">
                  (607) 238-7307
                </a>
              </div>
              <div class="flex items-center">
                <span class="text-sm text-muted-foreground mr-2">Email:</span>
                <a href="mailto:banyangrocers@gmail.com" class="text-fresh-600 hover:text-fresh-700 font-medium transition-colors">
                  banyangrocers@gmail.com
                </a>
              </div>
            </div>
          </div>
        </div>

        <!-- Location Card -->
        <div class="bg-white/70 backdrop-blur-sm border-0 shadow-lg rounded-lg p-6 mb-8">
          <div class="flex items-center mb-4">
            <div class="bg-fresh-100 p-3 rounded-full mr-4">
              <span class="text-2xl">📍</span>
            </div>
            <h2 class="text-xl font-semibold">Our Location</h2>
          </div>
          <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
            <div>
              <div class="space-y-3">
                <div>
                  <p class="font-medium text-lg">3823 Vestal Parkway East</p>
                  <p class="text-muted-foreground">Vestal, NY 13850</p>
                </div>
                <div class="pt-4">
                  <a
                    href="https://www.google.com/maps/search/?api=1&query=3823+Vestal+Parkway+East,+Vestal,+NY+13850"
                    target="_blank"
                    rel="noopener noreferrer"
                    class="inline-flex items-center px-6 py-3 bg-fresh-600 hover:bg-fresh-700 text-white rounded-md font-medium transition-colors"
                  >
                    🗺️ Get Directions
                  </a>
                </div>
              </div>
            </div>
            <div class="bg-gray-100 rounded-lg h-64 flex items-center justify-center">
              <p class="text-muted-foreground">Map integration available</p>
            </div>
          </div>
        </div>

        <!-- Services Card -->
        <div class="bg-white/70 backdrop-blur-sm border-0 shadow-lg rounded-lg p-6">
          <div class="flex items-center mb-4">
            <div class="bg-fresh-100 p-3 rounded-full mr-4">
              <span class="text-2xl">🛒</span>
            </div>
            <h2 class="text-xl font-semibold">What We Offer</h2>
          </div>
          <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4">
            <div class="flex items-center space-x-3 p-3 bg-fresh-50 rounded-lg">
              <span class="text-lg">🥬</span>
              <span class="font-medium">Fresh Produce</span>
            </div>
            <div class="flex items-center space-x-3 p-3 bg-fresh-50 rounded-lg">
              <span class="text-lg">🌾</span>
              <span class="font-medium">Rice & Grains</span>
            </div>
            <div class="flex items-center space-x-3 p-3 bg-fresh-50 rounded-lg">
              <span class="text-lg">🌶️</span>
              <span class="font-medium">Spices & Herbs</span>
            </div>
            <div class="flex items-center space-x-3 p-3 bg-fresh-50 rounded-lg">
              <span class="text-lg">🥛</span>
              <span class="font-medium">Dairy Products</span>
            </div>
            <div class="flex items-center space-x-3 p-3 bg-fresh-50 rounded-lg">
              <span class="text-lg">🍖</span>
              <span class="font-medium">Frozen Foods</span>
            </div>
            <div class="flex items-center space-x-3 p-3 bg-fresh-50 rounded-lg">
              <span class="text-lg">🍪</span>
              <span class="font-medium">Snacks & Sweets</span>
            </div>
          </div>
        </div>
      </div>
    </div>
  </main>
</Layout>
